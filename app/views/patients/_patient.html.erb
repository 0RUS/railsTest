<div id="<%= dom_id patient %>" style="display: flex; align-items: center; justify-content: center;">
  <div class="card" style="width: 30rem;">
    <h1 class="card-header text-center"><%= patient.first_name + " " + patient.last_name %></h1>
    <div class="card-body">
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong>Phone: </strong><%= patient.phone %></li>
        <li class="list-group-item"><strong>Email: </strong><%= patient.email %></li>
      </ul>
    </div>
  </div>
</div>