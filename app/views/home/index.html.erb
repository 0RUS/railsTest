<div style="display: flex; align-items: center; justify-content: center; flex-direction: column;">
    <h1>Hello!</h1>
    <% if user_signed_in? %>
        <div class="card" style="width: 30rem;">
            <h1 class="card-header text-center"><%= current_user.user_role == 0 ? "Admin" : current_user.user_role == 1 ? "Patient" : "Doctor" %></h1>
            <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Email: </strong><%= current_user.email %></li>
                <li class="list-group-item"><strong>Phone: </strong><%= current_user.phone %></li>
                <% if current_user.user_role == 0 %>
                <li class="list-group-item"><strong>Doctor ID:</strong><%= current_user.id %></li>
                <% end %>
            </ul>
            </div>
        </div>
    <% else %>
        <h3 class="text-center">Wanna try? <br/> <%= link_to "Sign In", new_user_session_path, class:"btn btn-primary btn-lg m-2" %> <%= link_to "Sign Up", new_user_registration_path, class:"btn btn-success btn-lg m-2" %></h3>
    <% end %>
</div>